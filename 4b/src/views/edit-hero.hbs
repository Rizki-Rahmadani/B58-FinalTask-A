<html lang="en"></html>

</html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Hero</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/navbar.css">
    <link rel="stylesheet" href="/assets/css/add-hero.css">
    <style>
        body {
            font-family: 'Noto Sans', sans-serif;
            font-size: large;
            background-color: #9bc3db;
        }
    </style>
</head>

<body>
    {{!-- Navbar --}}
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #5888a7;">
        <div class="container">
            <a href="/"><img src="/assets/img/logo.png" width="150px" alt=""></a>
            <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                </ul>
                {{#if user}}
            <div class="dropdown">
              <div class="welcome-text">Welcome, {{user.username}} â–¼</div>
              <div class="dropdown-content">
                <form action="/logout" method="POST">
                  <button type="submit" class="logout-btn">Logout</button>
                </form>
              </div>
            </div>
          {{else}}
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
            </ul>
          {{/if}}
            </div>
        </div>
    </nav>
    {{!-- Navbar --}}

    {{!-- Form Input --}}
    <div class="container-fluid my-5 d-flex justify-content-center">
        <div class="container-sm shadow p-5">
        <h2 class="text-center">EDIT HERO</h2>
        <br>
        <form action="/edit-hero/{{hero.id}}" method="POST" enctype="multipart/form-data" class="container-form p-3 mb-5">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{hero.name}}" required>
            </div>
            <div class="mb-3">
                <label for="heroType" class="form-label">Select Hero Type</label>
                <select class="form-select" id="heroType" name="heroType" required>
                    <option value="" disabled>Select a type</option>
                    {{#each types}}
                        <option value="{{this.id}}" {{#if (eq this.id ../hero.type_id)}}selected{{/if}}>{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*">
            </div>
            <button type="submit" class="btn btn-primary">Update Hero</button>
        </form>
        </div>
    </div>
    {{!-- Form Input --}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>