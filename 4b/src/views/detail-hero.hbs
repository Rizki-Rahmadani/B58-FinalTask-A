        <div class="container-sm d-flex justify-content-center flex-wrap gap">
          {{#if messages.error}}
            <div class="alert alert-danger" role="alert">
              {{messages.error}}
            </div>
          {{/if}}
          <div class="row container-detail">
            <div class="col-4">
              <img src="/{{hero.photo}}" class="card-img-top" alt="..." />
            </div>
            <div class="col">
              <div class="card-body py-2">
                <h4 class="card-title">Servant Name: {{hero.servant}}</h4>
                <p class="card-text">Type:
                  {{hero.name}}
                  [ID:
                  {{hero.type_id}}]</p>
                <p class="card-text">Author:
